st.sidebar.header('Opciones del Histograma')
num_bins = st.sidebar.slider(
'Número de Barras:',
min_value=1,
max_value=50,
value=30
)
# Sección principal para el gráfico
st.header('Histograma de Duración de Erupciones')
st.write(f'Mostrando la distribución con **{num_bins}** barras.')
# --- Lógica de Generación de Gráfico ---
# Creamos la figura de Matplotlib
fig, ax = plt.subplots()
# Generar el histograma
ax.hist(data, bins=num_bins, color='lightblue', edgecolor='black')
