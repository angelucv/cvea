ax.set_title('Histograma de Duración de Erupciones (Datos Simulados)')
ax.set_xlabel('Duración (Minutos)')
ax.set_ylabel('Frecuencia')
# Mostrar el gráfico en Streamlit
st.pyplot(fig)
